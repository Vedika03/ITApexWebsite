@model ITApexWebsite.Models.tblProduct
@{
    ViewBag.Title = "GetProductDetail";
    Layout = "~/Views/Shared/_ITProductLayout.cshtml";
}

<div class="container">
    <h5 class="display-6">Product Details</h5>
    <br />
    <div class="row">

        <div class="col-md-6">
            <div class="container">
                <img class="img-responsive" src="~/ProductImage/@Model.p_image" alt="Cinque Terre" width="420" height="336">
            </div>
        </div>


        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.p_name</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 text-primary">
                    <span class="label label-primary">Price: </span>
                    <span class="monospaced">@Model.p_price</span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <p class="description">
                        @Model.p_description
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <p class="description">
                        <span class="label label-primary">Hurry up only </span>
                        @Model.p_quantity left !
                    </p>
                </div>
            </div>


            <div class="row">
                <div class="col-md-4">
                    <a class="btn btn-outline-primary" data-toggle="modal" data-target="#exampleModal">
                        Buy now
                    </a>
                </div>
                <div class="col-md-4">
                    @using (Html.BeginForm("AddToCart", "Home", new { productId = Model.p_Id }, FormMethod.Post))
                    {
                        <button type="submit" class="btn btn-outline-primary pull-right"><i class="fa fa-shopping-cart"></i></button>

                    }
                </div>
            </div>
        </div>

    </div>
</div>


