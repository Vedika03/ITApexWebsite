@model ITApexWebsite.Models.tblProduct
@{
    ViewBag.Title = "GetProductDetail";
    Layout = "~/Views/Shared/_ITProductLayout.cshtml";
}


<br />
<br />
<br />
<br />

<div class="container">
    <h5 class="display-6">Product Details</h5>
    <br />
    <div class="row">

        <div class="col-md-6">
            <div class="container">
                <img class="img-responsive" src="~/ProductImage/@Model.p_image" alt="Cinque Terre" width="420" height="350">
            </div>
        </div>


        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1><b>@Model.p_name</b></h1>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-12 text-primary">
                    <span class="label label-primary">Price: </span>
                    <span class="monospaced"><b>₹@Model.p_price</b></span>
                </div>
            </div>
            <br />
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <p class="description">
                        <b>@Model.p_description</b>
                    </p>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-12">
                    <p class="description">
                        <span class="label label-primary"><b>Hurry up only</b> </span>
                        <b>@Model.p_quantity left !</b>
                    </p>
                </div>
            </div>
            <br />

            <div class="row">
                <div class="col-md-4">
                    <a class="btn btn-outline-primary" data-toggle="modal" data-target="#exampleModal">
                        Buy now
                    </a>
                </div>
                <div class="col-md-4">
                    @using (Html.BeginForm("AddToCart", "Home", new { productId = Model.p_Id }, FormMethod.Post))
                    {
                        <button type="submit" class="btn btn-outline-primary pull-right"><i class="fa fa-shopping-cart"></i></button>

                    }
                </div>
            </div>
        </div>

    </div>
</div>


