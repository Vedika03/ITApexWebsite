@model IEnumerable<ITApexWebsite.Models.tblProduct>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Product</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Product Details</li>
        </ol>
        <div class="card mb-4">

        </div>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Product Details
                <a href="../Admin/ProductAdd" class="btn btn-info pull-right">Add New</a>
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>Sr. No.</th>
                            <th>Category ID</th>
                            <th>Product Name</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Sr. No.</th>
                            <th>Category ID</th>
                            <th>Product Name</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                      @{ 
                          int count = 1;

                        foreach (var item in Model)
                        {

                            <tr>
                                <td>@count</td>
                                <td>@item.p_fk_c</td>
                                <td>@item.p_name</td>

                                <td>
                                    @Html.ActionLink("Edit", "ProductEdit", new { productId = item.p_Id })
                                </td>

                            </tr>
                            count++;

                        }
                          }

                    </tbody>

                </table>
            </div>
        </div>
    </div>
</main>
