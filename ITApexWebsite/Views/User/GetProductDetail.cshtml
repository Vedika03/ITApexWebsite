@model ITApexWebsite.Models.UserProductDisplay

@{
    ViewBag.Title = "GetProductDetail";
    Layout = "~/Views/Shared/_ITProductLayout.cshtml";
}
<br/>
<br />
<br />

<div class="container">
    <h5 class="display-6">Product Details</h5>
    <br />
    <div class="row">

        <div class="col-md-6">
            <div class="container">
                <img class="img-responsive" src="~/UserProductImage/@Model.p_img"  width="420" height="336">
            </div>
        </div>


        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h5><b>@Model.c_name</b></h5>
                    <h1>@Model.p_name</h1>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-12 text-primary">
                    <span class="label label-primary"><b>Price:</b> </span>
                    <span class="monospaced"><b>₹@Model.p_price</b></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-12">
                    <span class="label"><b>Description:</b> </span>
                    <p class="description">
                        <b>@Model.p_desc</b>
                    </p>
                </div>
            </div>
            <br />
            <div class="row alert-info">
                <div class="col-md-12">
                    <p class="username  ">
                        <span class="label label-primary"> <b>Posted By:</b> </span>
                        <b>@Model.u_name</b>
                    </p>
                </div>
            </div>

            <div class="row alert-info">
                <div class="col-md-12">
                    <p class="username ">
                        <span class="label label-primary"><b>Contact No:</b>  </span>
                        <b> @Model.u_contact</b>
                    </p>
                </div>
            </div>

            <div class="row alert-info">
                <div class="col-md-12">
                    <p class="description">
                        <span class="label label-primary"><b>For more details contact the seller</b></span>

                    </p>
                </div>
            </div>
        </div>

    </div>
</div>
